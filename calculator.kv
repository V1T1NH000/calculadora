<CalculatorApp>:
    BoxLayout:
        orientation: 'vertical'
        
        Label:
            id: display
            text: ''
            font_size: '80sp'
            size_hint_y: None
            height: '90sp'
        
        TextInput:
            id: input_field
            multiline: False
            font_size: '40sp'
            size_hint_y: None
            height: '150sp'
            padding: [10, 20]
            background_color: 0, 0, 0, 0
            foreground_color: 0, 0, 0, 1
            readonly: True
        
        GridLayout:
            cols: 4
            size_hint_y: None
            height: '360sp'
            
            Button:
                text: 'AC'
                on_press: root.all_clear()
            
            Button:
                text: 'Del'
                on_press: root.delete_last()
            
            Button:
                text: '%'
                on_press: root.pressed('%')
            
            Button:
                text: '÷'
                on_press: root.pressed('÷')
            
            Button:
                text: '7'
                on_press: root.pressed('7')
            
            Button:
                text: '8'
                on_press: root.pressed('8')
            
            Button:
                text: '9'
                on_press: root.pressed('9')
            
            Button:
                text: 'x'
                on_press: root.pressed('x')
            
            Button:
                text: '4'
                on_press: root.pressed('4')
            
            Button:
                text: '5'
                on_press: root.pressed('5')
            
            Button:
                text: '6'
                on_press: root.pressed('6')
            
            Button:
                text: '−'
                on_press: root.pressed('−')
            
            Button:
                text: '1'
                on_press: root.pressed('1')
            
            Button:
                text: '2'
                on_press: root.pressed('2')
            
            Button:
                text: '3'
                on_press: root.pressed('3')
            
            Button:
                text: '+'
                on_press: root.pressed('+')
            
            Button:
                text: '0'
                on_press: root.pressed('0')
            
            Button:
                text: '.'
                on_press: root.pressed('.')
            
            Button:
                text: '='
                on_press: root.equals()
